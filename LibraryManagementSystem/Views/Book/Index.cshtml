@model List<BookDto>
@{
    ViewBag.Title = "Books";
}
<h2>Books</h2>
<p><a asp-action="Create" class="btn btn-primary">Add New Book</a></p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Title</th>
            <th>Genre</th>
            <th>Author</th>
            <th>Status</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var book in Model)

        {
            <tr>
                <td>@book.Title</td>
                <td>@book.Genre</td>
                <td>@book.AuthorName</td>
                <td>
                    @if (book.IsBorrowed)
                    {
                        <span class="badge bg-danger">Borrowed</span>
                    }
                    else
                    {
                        <span class="badge bg-success">Available</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@book.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@book.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>