@model List<AuthorDto>
@{
    ViewBag.Title = "Authors";
}
<h2>Authors</h2>
<p><a asp-action="Create" class="btn btn-primary">Add New Author</a></p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Email</th>
            <th>Website</th>
            <th>Books</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var author in Model)

        {
            <tr>
                <td>@author.FullName</td>
                <td>@author.Email</td>
                <td>@author.Website</td>
                <td>
                    @if (author.Books != null && author.Books.Any())
                    {
                        <div class="dropdown">
                            <a class="btn btn-secondary dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                Books
                            </a>

                            <ul class="dropdown-menu">
                                @foreach (var book in author.Books)

                                {
                                    <li>
                                        <span class="dropdown-item disabled">@book.Title</span>
                                    </li>
                                }
                            </ul>
                        </div>
                    }
                    else
                    {
                        <span class="text-muted">No books</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@author.Id"
                       class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@author.Id"
                       class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>

